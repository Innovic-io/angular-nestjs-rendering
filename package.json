{
  "name": "angular-nestjs-render",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "concurrently --kill-others \"npm run server:watch\" \"ng serve --aot --progress=false --proxy-config proxy.conf.json\"",
    "client:build": "ng build --prod",
    "client:test": "ng test",
    "client:lint": "ng lint --fix",
    "server:lint": "tslint  './src/server/**/*.ts' -c tslint.server.json --fix",
    "server:test": "jasmine-ts ./src/server/**/*.spec.ts",
    "e2e": "ng e2e",
    "server:watch": "nodemon",
    "build:universal": "npm run helper:build:client-and-server && npm run helper:webpack:nest",
    "serve:universal": "node dist/server.js",
    "helper:build:client-and-server": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "helper:webpack:nest": "webpack --config webpack.server.config.js --colors"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.5",
    "@angular/common": "^5.2.5",
    "@angular/compiler": "^5.2.5",
    "@angular/core": "^5.2.5",
    "@angular/forms": "^5.2.5",
    "@angular/http": "^5.2.5",
    "@angular/platform-browser": "^5.2.5",
    "@angular/platform-browser-dynamic": "^5.2.5",
    "@angular/platform-server": "^5.2.5",
    "@angular/router": "^5.2.5",
    "@nestjs/common": "^4.6.4",
    "@nestjs/core": "^4.6.4",
    "@nestjs/graphql": "^1.0.0",
    "@nestjs/microservices": "^4.6.4",
    "@nestjs/testing": "^4.6.1",
    "@nestjs/websockets": "^4.5.8",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "apollo-angular": "^1.0.1",
    "apollo-angular-link-http": "^1.0.2-beta.0",
    "apollo-cache-inmemory": "^1.1.9",
    "apollo-client": "^2.2.5",
    "apollo-link": "^1.1.0",
    "apollo-server-express": "^1.2.0",
    "apollo-upload-server": "^4.0.2",
    "copy-webpack-plugin": "^4.4.1",
    "core-js": "^2.4.1",
    "dotenv": "^4.0.0",
    "graphql": "^0.11.7",
    "graphql-server-express-upload": "^1.0.0",
    "graphql-subscriptions": "latest",
    "graphql-tag": "^2.7.3",
    "graphql-tools": "^2.21.0",
    "mongodb": "^3.0.2",
    "multer": "^1.3.0",
    "ng-socket-io": "^0.2.4",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.4.3",
    "subscriptions-transport-ws": "latest",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.6.8",
    "@angular/compiler-cli": "^5.2.5",
    "@angular/language-service": "^5.2.5",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/mongodb": "^3.0.5",
    "@types/node": "^6.0.101",
    "codelyzer": "^4.1.0",
    "concurrently": "^3.5.1",
    "fs-extra": "^5.0.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "jasmine-ts": "^0.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.15.0",
    "protractor": "~5.1.2",
    "ts-loader": "^3.5.0",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "2.4.2"
  }
